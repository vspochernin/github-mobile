<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/navigation_repositories"
        android:name="com.gitficko.github.ui.repositories_list.RepositoriesFragment"
        android:label="@string/title_repositories"
        tools:layout="@layout/fragment_repositories" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.gitficko.github.ui.auth.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_repositoryListFragment"
            app:destination="@id/repositoryListFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/repositoryListFragment"
        android:name="com.gitficko.github.ui.user_info.UserInfoFragment"
        android:label="RepositoryListFragment" >
        <action
            android:id="@+id/action_repositoryListFragment_to_navigation_repositories"
            app:destination="@id/navigation_repositories" />
    </fragment>
</navigation>